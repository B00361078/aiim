                    <Button fx:id="loginBtn" onAction="#dashView" prefHeight="42.0" prefWidth="74.0" text="Sign In" />
                    </children>
                 
         </HBox>
            <ImageView fitHeight="364.0" fitWidth="403.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <image>
                  <Image url="@style/mainLogo.png" />
